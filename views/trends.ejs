<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My CO‚ÇÇ Trends</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
      /* ---------------------- Reset & Base ---------------------- */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(
          135deg,
          #0f7938 0%,
          #1abc9c 50%,
          #16a085 100%
        );
        min-height: 100vh;
        padding: 40px 20px;
        color: #fff;
        overflow-x: hidden;
        position: relative;
      }

      /* Animated background particles */
      body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 20% 50%,
            rgba(26, 188, 156, 0.1) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 80% 80%,
            rgba(15, 121, 56, 0.1) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 40% 20%,
            rgba(22, 160, 133, 0.1) 0%,
            transparent 50%
          );
        animation: particleFloat 15s ease-in-out infinite;
        pointer-events: none;
        z-index: 0;
      }

      @keyframes particleFloat {
        0%,
        100% {
          transform: translate(0, 0) scale(1);
        }
        33% {
          transform: translate(30px, -30px) scale(1.1);
        }
        66% {
          transform: translate(-20px, 20px) scale(0.9);
        }
      }

      h1 {
        font-size: 2.5em;
        text-align: center;
        margin-bottom: 30px;
        letter-spacing: 1px;
        font-weight: 700;
        text-shadow: 2px 4px 8px rgba(0, 0, 0, 0.2);
        animation: fadeInDown 1s ease-out;
        position: relative;
        z-index: 1;
        background: linear-gradient(135deg, #fff 0%, #a8e6cf 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      @keyframes fadeInDown {
        from {
          opacity: 0;
          transform: translateY(-50px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .chart-container {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(20px);
        border-radius: 25px;
        padding: 35px;
        margin: 30px auto;
        max-width: 900px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3),
          0 0 100px rgba(26, 188, 156, 0.2),
          inset 0 1px 0 rgba(255, 255, 255, 0.2);
        animation: fadeInUp 1s ease-out;
        position: relative;
        z-index: 1;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
      }

      .chart-container::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(
          45deg,
          transparent 30%,
          rgba(255, 255, 255, 0.1) 50%,
          transparent 70%
        );
        transform: rotate(45deg);
        animation: shimmer 3s infinite;
      }

      @keyframes shimmer {
        0% {
          transform: translateX(-100%) translateY(-100%) rotate(45deg);
        }
        100% {
          transform: translateX(100%) translateY(100%) rotate(45deg);
        }
      }

      .chart-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 30px 80px rgba(0, 0, 0, 0.4),
          0 0 120px rgba(26, 188, 156, 0.3),
          inset 0 1px 0 rgba(255, 255, 255, 0.3);
      }

      .chart-container h2 {
        position: relative;
        z-index: 1;
        font-size: 1.6em;
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 2px solid rgba(255, 255, 255, 0.3);
        text-shadow: 1px 2px 4px rgba(0, 0, 0, 0.2);
        animation: slideInLeft 0.8s ease-out;
      }

      @keyframes slideInLeft {
        from {
          opacity: 0;
          transform: translateX(-30px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(50px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      canvas {
        margin-top: 20px;
        position: relative;
        z-index: 1;
        border-radius: 15px;
        transition: transform 0.3s ease;
      }

      canvas:hover {
        transform: scale(1.02);
      }

      /* Buttons */
      .button-group {
        text-align: center;
        margin-top: 40px;
        position: relative;
        z-index: 1;
        animation: fadeIn 1.2s ease-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      .button-group a {
        background: linear-gradient(135deg, #1abc9c 0%, #16a085 100%);
        color: white;
        padding: 14px 30px;
        border-radius: 15px;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3),
          0 0 20px rgba(26, 188, 156, 0.3);
        display: inline-block;
        position: relative;
        overflow: hidden;
      }

      .button-group a::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        transform: translate(-50%, -50%);
        transition: width 0.6s, height 0.6s;
      }

      .button-group a:hover::before {
        width: 300px;
        height: 300px;
      }

      .button-group a:hover {
        transform: translateY(-5px) scale(1.05);
        box-shadow: 0 20px 50px rgba(26, 188, 156, 0.5),
          0 0 40px rgba(22, 160, 133, 0.4);
        letter-spacing: 1px;
      }

      .button-group a:active {
        transform: translateY(-2px) scale(1.02);
      }

      /* Stagger animation delays for containers */
      .chart-container:nth-child(2) {
        animation-delay: 0.1s;
      }

      .chart-container:nth-child(3) {
        animation-delay: 0.2s;
      }

      .chart-container:nth-child(4) {
        animation-delay: 0.3s;
      }

      /* Pulse animation for emphasis */
      @keyframes pulse {
        0%,
        100% {
          transform: scale(1);
        }
        50% {
          transform: scale(1.02);
        }
      }

      /* Responsive enhancements */
      @media (max-width: 768px) {
        h1 {
          font-size: 2em;
        }

        .chart-container {
          padding: 25px;
          margin: 20px auto;
        }

        .chart-container h2 {
          font-size: 1.3em;
        }
      }

      /* Smooth scroll behavior */
      html {
        scroll-behavior: smooth;
      }
    </style>
  </head>
  <body>
    <h1>üå± My CO‚ÇÇ Trends üåç</h1>

    <div class="chart-container">
      <h2>Daily CO‚ÇÇ (Last 7 Days)</h2>
      <canvas id="dailyChart"></canvas>
    </div>

    <div class="chart-container">
      <h2>Weekly CO‚ÇÇ (Last 4 Weeks)</h2>
      <canvas id="weeklyChart"></canvas>
    </div>

    <div class="chart-container">
      <h2>Monthly CO‚ÇÇ (Last 6 Months)</h2>
      <canvas id="monthlyChart"></canvas>
    </div>

    <div class="button-group">
      <a href="/login">‚Üê Back to Dashboard</a>
    </div>

    <script>
        // Pass server data to JS
        const dailyLabels = <%- JSON.stringify(dailyData.map(d => d.entry_date)) %> || [];
      const dailyValues = <%- JSON.stringify(dailyData.map(d => d.total_co2)) %> || [];

      const weeklyLabels = <%- JSON.stringify(weeklyData.map(d => "Week " + d.week_num)) %> || [];
      const weeklyValues = <%- JSON.stringify(weeklyData.map(d => d.total_co2)) %> || [];

      const monthlyLabels = <%- JSON.stringify(monthlyData.map(d => "Month " + d.month_num)) %> || [];
      const monthlyValues = <%- JSON.stringify(monthlyData.map(d => d.total_co2)) %> || [];

        // Chart.js defaults
        Chart.defaults.font.family = "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif";
        Chart.defaults.color = "#fff";

        // ------------------- Daily Chart -------------------
        new Chart(document.getElementById('dailyChart').getContext('2d'), {
          type: 'line',
          data: {
            labels: dailyLabels,
            datasets: [{
              label: 'CO‚ÇÇ (kg)',
              data: dailyValues,
              fill: true,
              backgroundColor: 'rgba(26,188,156,0.2)',
              borderColor: '#1abc9c',
              tension: 0.4,
              pointRadius: 5,
              pointHoverRadius: 7
            }]
          },
          options: {
            responsive: true,
            plugins: {
              legend: { display: false }
            },
            scales: {
              y: {
                beginAtZero: true
              }
            }
          }
        });

        // ------------------- Weekly Chart -------------------
        new Chart(document.getElementById('weeklyChart').getContext('2d'), {
          type: 'bar',
          data: {
            labels: weeklyLabels,
            datasets: [{
              label: 'CO‚ÇÇ (kg)',
              data: weeklyValues,
              backgroundColor: '#16a085'
            }]
          },
          options: {
            responsive: true,
            plugins: {
              legend: { display: false }
            },
            scales: {
              y: { beginAtZero: true }
            }
          }
        });

        // ------------------- Monthly Chart -------------------
        new Chart(document.getElementById('monthlyChart').getContext('2d'), {
          type: 'line',
          data: {
            labels: monthlyLabels,
            datasets: [{
              label: 'CO‚ÇÇ (kg)',
              data: monthlyValues,
              fill: true,
              backgroundColor: 'rgba(26, 188, 156, 0.2)',
              borderColor: '#0f7938',
              tension: 0.4,
              pointRadius: 5,
              pointHoverRadius: 7
            }]
          },
          options: {
            responsive: true,
            plugins: {
              legend: { display: false }
            },
            scales: { y: { beginAtZero: true } }
          }
        });
    </script>
  </body>
</html>
